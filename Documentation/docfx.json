{
  "metadata": [
    {
      "src": [
        {
          "src": "..",
          "files": [ "**.cs" ]
        }
      ],
      "globalNamespaceId": "Global",
      "filter": "filterConfig.yml",
      "dest": "api"
    }
  ],
  "build": {
    "globalMetadata": {
      "_appTitle": "i5 Toolkit for Mixed Reality Documentation",
      "_appFooter": "i5 Toolkit for Mixed Reality Documentation",
      "_enableSearch": true,
      "_appLogoPath": "https://raw.githubusercontent.com/rwth-acis/i5-Toolkit-for-Mixed-Reality/master/Logos/Logo%20wide.svg",
      "_appFaviconPath":  "https://raw.githubusercontent.com/rwth-acis/i5-Toolkit-for-Mixed-Reality/master/Logos/Logo%20wide.svg"
    },
    "content": [
      {
        "files": [ "toc.yml", "index.md" ]
      },
      {
        "src": "api",
        "files": [ "*.yml" ],
        "dest": "api"
      },
      {
        "files": [ "manual/toc.yml", "manual/**.md" ]
      }
    ],
    "overwrite": [
      {
        "src": "..",
        "files": [ "Assets/i5 Toolkit for Mixed Reality/**/*.md" ]
      }
    ],
    "resource": [
      {
        "files": [ "resources/**/*" ],
      }
    ],
    "sitemap": {
      "baseUrl": "https://localhost",
      "changefreq": "weekly",
      "fileOptions": {
        "api/*": {
          "changefreq": "daily"
        }
      }
    },
    "xref": [ "https://normanderwan.github.io/UnityXrefMaps/2018.4/xrefmap.yml" ],
    "xrefService": [ "https://xref.docs.microsoft.com/query?uid={uid}" ],
    "dest": "../_site"
  }
}